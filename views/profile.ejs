<!DOCTYPE html>
<html>
<!-- We add the small piece of template header -->
<% include ./partials/header %>
<% include ./partials/navbar %>

  <body>
  <div class="bg-white rounded shadow-sm p-5">

      <!-- We render title passed by parameter in routes/index.js -->
      <h2 class="border-bottom border-gray pb-2 mb-0 text-xl-left"><span class="badge-title p-3"><%= title %></span></h2>
      
    <div class="container">
    <div class="row">
        <div class="col-sm">
        <h6> <%= user.name %></h6>
        <p><b>Email:</b> <%= user.email %></p>
        <p><%= user.firstname %> <%= user.lastname %></p>
        </div>
        
        
           

    </div>
      <div class="row mt-5">
        <div class="col-sm">
            <h3 class="border-bottom border-gray pb-2 mb-0 text-xl-left"><span class="badge-title p-3">My created events</span></h3>
           <% createdEvent.forEach(function(event) { %>
                <li><%= event.title %></li>
            <% }); %>
        </div>
        <div class="col-sm">
        <h3 class="border-bottom border-gray pb-2 mb-0 text-xl-left"><span class="badge-title p-3">My participating events</span></h3>
           <% participateEvent.forEach(function(event) { %>
                <li><%= event.title %></li>
            <% }); %>
        </div>
        
      </div>
    </div>

    </div>
  </body>

  <!-- We add the small piece of template footer -->

  <% include ./partials/footer %>

</html>
